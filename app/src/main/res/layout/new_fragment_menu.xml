<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationX="0"
    tools:context=".mvp.menu.view.MenuFragment">
    
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/imageView2"
        app:layout_constraintEnd_toEndOf="@id/leewell"
        app:layout_constraintTop_toTopOf="@id/leewell"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/leewell"/>

    <ImageView
        android:id="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="90dp"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:src="@drawable/logo_sleewell" />

    <TextView
        android:id="@+id/leewell"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:text="@string/leewell"
        android:fontFamily="@font/white_smith"
        android:textSize="89sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="125dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ToggleButton
                android:id="@+id/home_nav"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@color/button_text_color"
                android:textOff="@string/nav_button_home"
                android:textOn="@string/nav_button_home"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/alarm_nav"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textOff="@string/alarm_title_menu"
                android:textOn="@string/alarm_title_menu"
                android:textColor="@color/button_text_color"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/home_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/profile_nav"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textOn="@string/profile_title_menu"
                android:textOff="@string/profile_title_menu"
                android:textColor="@color/button_text_color"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/alarm_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/routine_nav"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@color/button_text_color"
                android:textOff="ROUTINE"
                android:textOn="ROUTINE"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/profile_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/stats_nav"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@color/button_text_color"
                android:textOff="STATS"
                android:textOn="STATS"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/routine_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/settings_nav"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@color/button_text_color"
                android:textOff="@string/nav_button_settings"
                android:textOn="@string/nav_button_settings"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stats_nav"
                app:layout_constraintTop_toTopOf="parent" />
          
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <fragment
        android:id="@+id/nav_menu"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-20dp"
        app:defaultNavHost="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:navGraph="@navigation/nav_menu"
        />
</androidx.constraintlayout.widget.ConstraintLayout>