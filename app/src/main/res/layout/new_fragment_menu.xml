<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationX="0"
    tools:context=".mvp.menu.view.MenuFragment">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_light_rounded"
        android:backgroundTint="@color/background"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:fontFamily="@font/nunito_light"
        android:text="@string/app_name"
        android:textColor="@color/textOnBackground"
        android:textColorHighlight="#FFFFFF"
        android:textSize="64sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />


    <HorizontalScrollView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ToggleButton
                android:id="@+id/home_nav"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@drawable/button_text_color"
                android:textOff="@string/nav_button_home"
                android:textOn="@string/nav_button_home"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/alarm_nav"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@drawable/button_text_color"
                android:textOff="ALARM"
                android:textOn="ALARM"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/home_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/profile_nav"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@drawable/button_text_color"
                android:textOff="PROFILE"
                android:textOn="PROFILE"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/alarm_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/routine_nav"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@drawable/button_text_color"
                android:textOff="ROUTINE"
                android:textOn="ROUTINE"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/profile_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/stats_nav"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@drawable/button_text_color"
                android:textOff="STATS"
                android:textOn="STATS"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/routine_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/settings_nav"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/nav_button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:textColor="@drawable/button_text_color"
                android:textOff="@string/nav_button_settings"
                android:textOn="@string/nav_button_settings"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stats_nav"
                app:layout_constraintTop_toTopOf="parent" />
          
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <fragment
        android:id="@+id/nav_menu"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-20dp"
        app:defaultNavHost="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:navGraph="@navigation/nav_menu"
        />
</androidx.constraintlayout.widget.ConstraintLayout>